rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow authenticated users to read nurses collection
    match /nurses/{clinicId} {
      allow read: if request.auth != null;
      allow write: if false;
    }

    // Allow authenticated users to read/write their attendance
    match /attendance/{clinicId} {
      allow read, write: if request.auth != null;
    }

    match /attendance/{clinicId}/logins/{loginId} {
      allow read, write: if request.auth != null;
    }

    // Camp attendance records
    match /camps/{clinicId} {
      allow read, write: if request.auth != null;
    }

    match /camps/{clinicId}/records/{recordId} {
      allow read, write: if request.auth != null;
    }

    // Allow collection group queries on "records" subcollection
    match /{path=**}/records/{recordId} {
      allow read: if request.auth != null;
    }
  }
}
